<Page x:Class="Coffe_Application_Q_SKIP.Exit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Coffe_Application_Q_SKIP"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Exit">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>


        

        <DockPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Border BorderThickness="3" BorderBrush="Black" CornerRadius="10" Padding="4">


                <Border.Effect>
                    <DropShadowEffect Color="Gray"
                                          Opacity="50"
                                          ShadowDepth="4"/>
                </Border.Effect>
                <Frame Name="frmUsers"/>
            </Border>
        </DockPanel>



        <Grid.Background>
            <ImageBrush ImageSource="Images\coffeemaker.PNG"
                        Stretch="UniformToFill">

            </ImageBrush>
        </Grid.Background>
    </Grid>
</Page>
