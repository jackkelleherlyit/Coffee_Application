<Page x:Class="Coffe_Application_Q_SKIP.Stock"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Coffe_Application_Q_SKIP"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Stock">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,10" >
            <TextBox Name="txboxSearch"
                     Height="26"
                     Width="100"
                    />
            <Button Name="btnSearch"
                    Height="26"
                    Width="100"
                    FontWeight="Heavy"
                    Content="Search"
                    Margin="2,0"
                    />
            <Button Name="btnCoffee"
                    Height="26"
                    Width="100"
                    FontWeight="Heavy"
                    Content="Coffee"
                    Margin="2,0"
                    />
            <Button Name="btnMyOrder"
                    Height="26"
                    Width="100"
                    FontWeight="Heavy"
                    Content="Stock"
                    Margin="2,0"
                    />
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,10" >
            <Button Name="btnStock"
                    Height="26"
                    Width="100"
                    FontWeight="Heavy"
                    Content="EXIT" 
                    Foreground="Blue"
                    HorizontalAlignment="Right"
                    Margin="2,0"
                    />
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Vertical" Margin="0,10,0,10">

            <ListBox FontSize="16" FontWeight="Bold" Foreground="ForestGreen" Width="100"  HorizontalAlignment="Center" >
                :Quantity :
            </ListBox>

            <ComboBox Height = "25" Width = "200" HorizontalAlignment = "Center" Margin = "10,0,10,0">
                <ComboBoxItem  HorizontalAlignment="Center" Content = "123"/>

            </ComboBox>

        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" Margin="0,10,0,10">

            <ListBox FontSize="16" FontWeight="Bold" Foreground="ForestGreen" Width="100"  HorizontalAlignment="Center" >
                :Size :
            </ListBox>

            <ComboBox Height = "25" Width = "200" HorizontalAlignment = "Center" Margin = "10,0,10,0">
                <ComboBoxItem  HorizontalAlignment="Center" Content = "SMALL"/>
                <ComboBoxItem  HorizontalAlignment="Center" Content = "MEDIUM"/>
                <ComboBoxItem  HorizontalAlignment="Center" Content = "LARGE"/>
            </ComboBox>

        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Vertical" Margin="0,10,0,10">

            <ListBox FontSize="16" FontWeight="Bold" Foreground="ForestGreen" Width="100"  HorizontalAlignment="Center" >
                : Coffee :
            </ListBox>

            <ComboBox Height = "25" Width = "200" HorizontalAlignment = "Center" Margin = "10,0,10,0" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBoxItem HorizontalAlignment="Center" Content = "Americano"/>
                <ComboBoxItem HorizontalAlignment="Center" Content = "Cappuccino"/>
                <ComboBoxItem HorizontalAlignment="Center" Content = "Late"/>
                <ComboBoxItem HorizontalAlignment="Center" Content = "Flat White"/>
                <ComboBoxItem HorizontalAlignment="Center" Content = "Espresso"/>
            </ComboBox>

        </StackPanel>

        <StackPanel Grid.ColumnSpan="4" Grid.Row="4" Grid.Column="0" Orientation="Vertical" Margin="0,10,0,10" >
            <Label HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Content="PLEASE CHOOSE FROM THE ABOVE OPTIONS"
                   FontSize="22"
                   FontWeight="Bold"
                   FontStyle="Italic"
                   />
        </StackPanel>


        <DockPanel Grid.ColumnSpan="4" Grid.Row="1"  Margin="3,10,3,0" >
            <Border BorderThickness="3" 
                    BorderBrush="Black"
                    CornerRadius="10"
                    Padding="4">
                <Border.Effect>
                    <DropShadowEffect Color="Gray"
                                      Opacity="50"
                                      ShadowDepth="4"/>
                </Border.Effect>
                <Frame Name="frmMain"/>
            </Border>
        </DockPanel>

        <Grid.Background>
            <ImageBrush ImageSource="Images\coffeemaker.PNG"
                        Stretch="UniformToFill">

            </ImageBrush>
        </Grid.Background>
    </Grid>
</Page>
